/* wallet/invoiceDetail/invoiceDetail.wxss */
page{
  background-color: #f7f7f7;
}
.header{
  margin-top: 20rpx;
  padding: 30rpx 30rpx 0;
  height: 100rpx;
  color: #aaa;
  font-size: 24rpx;
  background-color: #fff;
  position: relative;
  overflow: hidden;
}

.header .left-font{
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.header .right-position{
  position: absolute;
  right: 30rpx;
  top: 50%;
  padding-right: 1em;
  transform: translateY(-50%);
}
.header .right-position::after{
  content:'';
  display:block;
  box-sizing: border-box;
  width: 15rpx;
  height: 15rpx;
  position:absolute;
  top:50%;
  right:0;
  transform: translateY(-50%) rotate(45deg);
  border-right:#666 solid 1rpx ;
  border-top: #666 solid 1rpx ;
}

.title{
  color: #666;
  font-size: 24rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 30rpx;
}

.list-type{
  height: 80rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 80rpx;
  background-color: #fff;
  display: inline-black;
  white-space:pre;
  overflow:hidden;
  text-overflow:ellipsis;
  border-bottom: 1rpx solid #ccc;
}
.list-type-no-border{
  border-bottom: none;
}
.list-type .type-left{
  width: 200rpx;
  color: #aaa;
  margin-left: 30rpx;
  display: inline-block;
}

.reopen{
  width: 650rpx;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  padding: 20rpx;
  margin: 30rpx auto;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: #003478;
}