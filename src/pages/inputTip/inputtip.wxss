.searchIMg {
  position: absolute;
  left:35rpx;
  top:56rpx;
}
.search{
  width:21rpx;
  height:27rpx;
}
.history{
  width: 28rpx;
  height: 28rpx;
}
.tip-distance {
  position: absolute;
  right: 25rpx;
  top: 50rpx;
  font-size: 24rpx;
  color: #999
}
.tip-name{
  font-size:32rpx;
  width: 16em;
  overflow: hidden;
  white-space: pre;
  text-overflow: ellipsis;
}
.tip-address{
  width: 16em;
  font-size:24rpx;
  color:#999;
  white-space: pre;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top:5rpx;
}

.address{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid #ddd;
}
.border{
  width: 10rpx;
  height: 100%;
  border-left: 1px solid #ddd;
}
.flex_address {
  width: 50%;
  height: 80rpx;
  color: #212121;
  font-weight:bold;
  font-size: 28rpx;
  position: relative;
  padding-left: 80rpx;
  overflow: hidden;
}
.flex_address text{
  display: block;
  color: #ccc;
  width: 100%;
  line-height: 40rpx;
  margin-top: 10rpx;
  display:inline-block;
  font-weight: 400;
  font-size: 22rpx;
  overflow-x: hidden;
  white-space: pre;
  text-overflow: ellipsis;
}
.flex_address image{
  width: 40rpx;
  height: 40rpx;
  left: 20rpx;
  top: 20rpx;
  position: absolute;
}