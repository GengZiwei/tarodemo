.section{
  padding:32rpx 0;
  width: 100%;
  display: flex;
  border-bottom:solid 1px #ddd;
  font-size:28rpx;
}
.section input{
  border-left:1px solid #ddd;
  border-right:1px solid #ddd;
  height:36rpx;
  padding:0rpx 20rpx;
  line-height:38rpx;
  font-size:28rpx;
  display:block;
  flex:auto;
}
.section text{
  font-size:28rpx;
  padding:0 30rpx;
  display: inline-block;
  height:38rpx;
  line-height: 38rpx;
  color:#999;
}
.text_box{
  padding: 30rpx 100rpx 30rpx 80rpx;
  border-bottom:1px solid #ddd;
  padding-bottom:10px;
  position:relative;
}
