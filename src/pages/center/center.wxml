<!--pages/center/center.wxml-->
<view class='container'>
  <view class='center'>
      <view class="userinfo-avatar">
        <open-data type="userAvatarUrl" class="usericon"></open-data>
      </view>
      <text class='center_phone'> {{phone}}</text>
  </view>
  <view class='function'>
    <view class='Order_center' data-route='/pages/orderlist/orderlist' bindtap='_showorder'>
       <image src='../../image/user-order.png' class='ordericon'></image>
       <text class='txt_order'>订单中心</text>
    </view>
    <view class='Order_center' data-route='/wallet/wallet/wallet' bindtap='_showorder'>
       <image src='../../image/wattle.png' class='ordericon'></image>
       <text class='txt_order'>钱包</text>
    </view>
    <view class='Order_center' data-route='/pages/address/address' bindtap='_showorder'>
       <image src='../../image/address.png' class='moreicon'></image>
       <text class='txt_more'>常用地址</text>
    </view>
    <view class='more' data-route='/pages/more/more' bindtap='_showorder'>
       <image src='../../image/user-more.png' class='moreicon'></image>
       <text class='txt_more'>更多</text>
    </view>
  </view>
</view>
