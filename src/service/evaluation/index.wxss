/* service/evaluation/index.wxss */
.evaluat-header{
  text-align: center;
  font-size:30rpx;
  font-weight:400;
  color:#1c1c1c;
  margin-top: 48rpx;
}

.evaluat-img{
  display: flex;
  width: 60%;
  padding: 50rpx 0;
  margin: 0 auto;
  justify-content: space-between;
}

.img-view{
  width: 100rpx;
  font-size: 30rpx;
  text-align: center;
}

.img-view image{
  width: 88rpx;
  height: 88rpx;
}
.evaluat-select{ 
  padding: 0 50rpx;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  flex-wrap: wrap;
}

.evaluat-span{
  display: inline-block;
  border-radius: 10rpx;
  min-width: 110rpx;
  font-size:28rpx;
  margin-right: 18rpx;
  margin-top: 18rpx;
  font-weight:400;
  color:#ccc;
  border: 1rpx solid currentColor;
  padding: 20rpx;
}

.click-span{
  color:#003478;
}

.cancel-textarea{
  margin-top: 30rpx;
  margin-bottom: 134rpx;
  font-size: 30rpx;
  padding-top: 10rpx;
  border:1px solid rgba(238,238,238,1);
  border-radius:10px;
  text-indent: 1em;
}
.cancel-foot{
  position: fixed;
  max-height: 134rpx;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 23rpx 20rpx;
}
.button-hover,
.btn[type=primary]{
  font-size:20px;
  background-color: #003478;
}