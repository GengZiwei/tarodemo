/* wallet/purchaser/purchaser.wxss */
.swiper-view{
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #ddd;
  font-size: 26rpx;
  color: #666666;
  position: relative;
}
.right-input{
  position: absolute;
  width: calc(100% - 260rpx);
  height: 100rpx;
  top: 0;
  left: 0;
  padding-left: 240rpx;
  white-space:pre;
  overflow:hidden;
  text-overflow:ellipsis;
}
.right-input input{
  height: 100%;
}
.swiper-view .left-text {
  display: inline-block;
  width: 240rpx;
  white-space:pre;
  overflow:hidden;
  text-overflow:ellipsis;
}
.input-placeholder{
  color: #ccc;
  font-size: 26rpx;
  line-height: 100rpx;
}
.button{
  height: 88rpx;
  font-size: 32rpx;
  width: 100%;
  padding: 0 20rpx;
  color: #fff;
  background-color:#ddd;
  line-height: 88rpx;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
  background-color: #003478;
}