/* pages/order_progress/index.wxss */
.map_box{
  position:absolute;
  top: 70px;
  bottom: 0;
  left: 0px;
  right: 0px;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.content{
  position: fixed;
  bottom: 20rpx;
  width: 710rpx;
  left: 50%;
  transform: translateX(-50%);
  /* overflow: visible; */
}
.imgwrap{
  position: fixed;
  display: inline-block;
  bottom: 310rpx;
  /* overflow: visible; */
}
.infowrap{
  box-sizing: border-box;
  background-color: #fff;
  box-shadow:0rpx 0rpx 6rpx 6rpx #d9d9d9;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.carful{
  width: 240rpx;
  height: 119rpx;
}
.pro_reset{
   width:85rpx;
  height:84rpx;
  right:20rpx;
}
.ordericon_car{
  width: 167rpx;
  height: 107rpx;
  padding: 28rpx 0;
}
.info{
 font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 91.69%;
  margin: auto;
}
.info-top{
  padding-top: 27rpx;
  box-sizing: border-box;
}
.info-top .license{
  width: 6em;
  line-height: 2;
  text-align: center;
  background-color: #dddddd;
  border-radius: 6rpx;
}
.info-bottom{
  color: #666;
  font-size: 26rpx;
  padding: 29rpx 0;
}
.info-bottom .date {
  flex: 3;
}
.info-bottom .people-num{
  flex: 1;
  text-align: end;
}
.info-complete{
  justify-content: center;
  font-size: 26rpx;
}
.money{
  font-size: 32rpx;
  text-align: center;
  line-height: 4;
}
.dialog-longline{
  width: 100%;
  height: 2rpx;
  background: #e2e2e2;
}
.btnpay{
  background-color: #003478;
  color: #fff;
  font-size: 32rpx;
}
.hide{
  display: none;
}
.block {
  display: block;
}
