/**index.wxss**/
@import "./capy.wxss";
.address-input .loc{
  font-size:36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: pre;
}

.start-Location text,.end-Location text{
  color:#999;
}
.address-input:first-child::before{
  border:solid 7rpx #003478;
}
.site{
  position:absolute;
  width:172rpx;
  height:82rpx;
  bottom:280rpx;
  left:20rpx;
  line-height: 82rpx;
  font-size: 24rpx;
  background: #FFF;
  border-radius: 100rpx;
  text-align: start;
}
.site .img{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}
.site .text{
  height: 82rpx;
  margin-left: 40rpx;
  line-height: 82rpx;
}
.reset{
  bottom:290rpx;
}
.dialog-order{
  position: fixed;
  z-index: 10;
  top:0;
  right:0;
  bottom:0;
  left:0;
  background-color:rgba(0,0,0,0.5);
}
.dialog-main{
  width:490rpx;
  margin:220rpx auto 0;
}
.dialog-status{
  background-color:#fff;
  height: 306rpx;
  text-align: center;
}
.dialog-content{
  font-size:32rpx;
  color:#333;
  margin-top:70rpx;
}
.dialog-btn{
  margin:70rpx auto 60rpx;
  width:200rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:24rpx;
  border-radius: 60rpx;
  background-color:#FFF;
  border:solid 1px #003478;
}
.btn-close{
  width:82rpx;
  height:82rpx;
  text-align: center;
  margin:100rpx auto 0;
}

.iconStart{
  width: 50rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  margin-top: -86rpx;
  left: 50%;
  margin-left: -25rpx;
}
.iconbubble{
  font-size: 20rpx;
  padding: 0 20rpx;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  background: #fff;
  border-radius: 100rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  margin-top: -160rpx;
  box-shadow: 0rpx 0rpx 1rpx 3rpx #d9d9d9;
}
.iconsan{
  top: 50%;
  left: 50%;
  width: 140rpx;
  height: 30rpx;
  text-align: center;
  transform: translateX(-50%);
  margin-top: -114rpx;
  position: absolute;
}
.iconsan .icon{
  width:32rpx;
  height:18rpx;
  left: 50%;
  margin-left: -14rpx;
  position:absolute;
}

.coupon{
  background: #000;
  opacity: .8;
  height:100%;
  width:100%;
  position:fixed;
  z-index:1
}
.pupuns{
  position: absolute;
  width: 551rpx;
  height: 742rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.closecoupon{
  position: absolute;
  width:41rpx;
  height:41rpx;
  text-align: center;
  top: 215rpx;
  right: 112rpx;
}