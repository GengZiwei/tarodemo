.start-Location{
  margin-right: 30rpx;
  font-size: 36rpx;
  white-space: pre;
  overflow: hidden;
  text-overflow: ellipsis;
}
.start-Location text,.end-Location text {
  color:#999;
}
.address-input .image{
  width: 40px;
  height: 100%;
  top: 0;
  right: 10rpx;
  position: absolute;
}
.image image {
  width:30rpx;
  height:18rpx;
  position: absolute;
  left: 20rpx;
  top: 14rpx;
}

