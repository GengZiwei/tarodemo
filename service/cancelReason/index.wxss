/* service/cancelReason/index.wxss */
page{
  background-color: #f7f7f7;
}

.cancel-header{
  padding-top: 44rpx;
  padding-bottom: 44rpx;
  text-align: center;

}
.cancel-foot{
  background: #fff;
  position: fixed;
  max-height: 134rpx;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 23rpx 20rpx;
}
.cancel-header image{
  width: 108rpx;
  height: 108rpx;
}

.cancel-huger{
  padding: 0 30rpx 134rpx;
  background-color: #fff;
}
.cancel-huger .conter{
  padding: 0 38rpx;
}
.conter .text-reason{
  font-size:28rpx;
  font-weight:400;
  text-align: start;
  color:#999999;
  display: inline-block;
  padding: 44rpx 0 25rpx;
}

.huger-list-cancel{
  height: 88rpx;
  line-height: 88rpx;
  font-size:30rpx;
  font-weight:400;
  color: #1C1C1C;
  position: relative;
  border-bottom: solid 1rpx #F4F4F4;
}
/* .huger-list-cancel:nth-of-type(1){
  border-bottom: dashed 1rpx rgb(117, 117, 117);  
} */

.huger-list-cancel::after{
  content:'';
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 50%;
  right: 0;
  border: 2rpx solid rgb(143, 142, 142);
  border-radius: 100%;
  transform: translate(0,-50%);
}

.huger-list-sever::after {
  border: none;
  width: 34rpx;
  height: 34rpx;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: cover;
}

.cancel-textarea{
  margin-top: 30rpx;
  font-size: 30rpx;
  padding-top: 10rpx;
  border:1px solid rgba(238,238,238,1);
  border-radius:10px;
  text-indent: 1em;
}

.button-hover,
.btn[type=primary]{
  font-size:20px;
  background-color: #003478;
}